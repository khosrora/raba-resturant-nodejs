<%- include("../includes/adminIncludes/HeaderSecure.ejs") %>

    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">داشبورد مدیریت</h1>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div class="mr-4 col-8">
            <%- include("../includes/error.ejs") %>
                <form action="/admin/editFood/<%= food.id %>" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="image">لطفا عکس غذا را انتخاب کنید</label>
                        <input type="file" class="form-control" name="image" />
                    </div>
                    <div class="form-group">
                        <label for="name">نام غذا</label>
                        <input type="text" class="form-control" name="name" id="name" />
                    </div>
                    <div class="form-group">
                        <label for="price">قیمت</label>
                        <input type="text" class="form-control" name="price" id="price" />
                    </div>
                    <div class="form-group">
                        <label for="detail">جزئیات</label>
                        <input type="text" class="form-control" name="detail" id="detail" />
                    </div>
                    <div class="form-group">
                        <label for="meal">وعده غذایی</label>
                        <select class="form-control" name="meal" id="meal">
                            <option value="صبحانه">صبحانه</option>
                            <option value="ناهار">ناهار</option>
                            <option value="شام">شام</option>
                            <option value="نوشیدنی ها">نوشیدنی ها</option>
                            <option value="پیش غذا ها">پیش غذا ها</option>
                            <option value="بعد از غذا">بعد از غذا</option>
                        </select>
                    </div>
                    <div class="form-group my-3">
                        <button type="submit" class="btn btn-outline-dark"> ویرایش </button>
                    </div>
                </form>
        </div>
    </div>
    <!-- /.content-wrapper -->