<form action="/reservation" method="POST" id="reservation">
    <div class="div" dir="ltr">
        <%- include("./message.ejs") %>
        <%- include("../includes/error.ejs") %>
    </div>
    <div class="row text-right" dir="rtl">
        <div class="col-md-6">
            <div class="form-group">
                <label for="">نام و نام خانوادگی</label>
                <input type="text" name="fullname" class="form-control" placeholder="نام شما"
                    id="fullname">
                <span></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">پست الکترونیک</label>
                <input type="email" name="email" class="form-control" placeholder="پست الکترونیک"
                    id="email">
                <span></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">شماره تماس</label>
                <input type="text" name="phone" class="form-control" placeholder="شماره تماس"
                    id="phone">
                <span></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">شماره تماس ضروری</label>
                <input type="text" name="phone2" class="form-control" placeholder="شماره تماس ضروری"
                    id="phone2">
                <span></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">زمان</label>
                <input type="text" name="time" class="form-control"
                    placeholder="مثال : شنبه  - ساعت چهار" id="time">
                <span></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">تعداد</label>
                <div class="select-wrap one-third">
                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                    <select name="number" id="number" class="form-control">
                        <option value=""></option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="2">3</option>
                        <option value="+4">4+</option>
                    </select>
                </div>
            </div>
            <span></span>
        </div>
        <div class="col-md-12 mt-3">
            <div class="form-group">
                <button type="submit" class="btn btn-primary py-3 px-5">همین الان رزرو کن!</button>
            </div>
        </div>
    </div>
</form>